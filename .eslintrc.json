{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],

	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-restricted-syntax": ["error", "FunctionExpression", "WithStatement", "BinaryExpression[operator='in']"],
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"parser": "flow"
			}
		]
	}
}
