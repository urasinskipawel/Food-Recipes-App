{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"prettier/prettier": [
		"error",
		{
		  "singleQuote": true,
		  "parser": "flow"
		}
	  ],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"prettier/prettier": "error"
	}
}
